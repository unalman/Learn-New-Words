{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "typings/**/*",
    "src/locales/*.json",
  ],
  "exclude": ["src/**/__tests__/*", "src/**/__unit-tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@typings": ["./typings/*"]
    },
    "ignoreDeprecations": "5.0",
    "strictPropertyInitialization": false
  }
}
